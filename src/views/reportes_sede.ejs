<%- include('./partials/_header'); %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <td>SEDE</td>
                            <td>Usuarios atendidos</td>
                            <td>Expedientes iniciados</td>
                            <td>Acuerdos Reparatorios</td>
                            <td>Sesiones conjuntas</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (reportes) { %>
                            <% for(var i=0; i < reportes.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= reportes[i].nombre %>
                                    </td>
                                    <td>
                                        <%= reportes[i].usuarios_atendidos %>
                                    </td>
                                    <td>
                                        <%= reportes[i].expedientes_iniciados %>
                                    </td>
                                    <td>
                                        <%= reportes[i].acuerdos_reparatorios %>
                                    </td>
                                    <td>
                                        <%= reportes[i].sesiones_conjuntas %>
                                    </td>
                                
                                    <td>
                                        <a href="coordinador/update/<%= reportes[i].id %>" class="btn btn-info">Edit</a>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            REPORTE DE SEDE
                        </h5><br>
                        <form action="/coordinador/addreport" method="POST">
                            <div class="form-group">
                                <input type="number" name="usuarios_atendidos" placeholder="Usuarios atendidos" class="form-control"
                                    autofocus>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="number" name="expedientes_iniciados" placeholder="Expedientes iniciados" class="form-control"
                                    autofocus>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="number" name="acuerdos_reparatorios" placeholder="Acuerdos Reparatorios" class="form-control">
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="number" name="sesiones_conjuntas" placeholder="Sesiones conjuntas" class="form-control">
                            </div>
                            <br>
                            <div class="form-group">
                                <% for(var i=0; i < sedes.length; i++) { %>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="id_sede"
                                            id="inlineRadio<%=sedes[i].id_sede%>" value="<%=sedes[i].id_sede%>">
                                        <label class="form-check-label" for="inlineRadio<%=sedes[i].id_sede%>">
                                            <%=sedes[i].nombre%>
                                        </label>
                                    </div>
                                    <% } %>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="hidden" name="id_usuario" value="<%= sedes[1].id_user %>"
                                    class="form-control">
                            </div>
                            <br>
                            <button type="submit" class="btn btn-primary">
                                GUARDAR
                            </button>
                        </form>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>

    <%- include('./partials/_footer'); %>